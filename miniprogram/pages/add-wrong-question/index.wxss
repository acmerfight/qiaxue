.container {
  padding: 40rpx 32rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9fa 0%, #e9ecef 100%);
}

.form {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx 36rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(0, 0, 0, 0.02);
}

.form-group {
  margin-bottom: 48rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 30rpx;
  color: #2d3748;
  margin-bottom: 20rpx;
  font-weight: 600;
  letter-spacing: 0.5rpx;
}

.required {
  color: #ff6b6b;
  margin-left: 4rpx;
}

.textarea {
  width: 100%;
  min-height: 220rpx;
  padding: 28rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  font-size: 30rpx;
  color: #2d3748;
  background-color: #fff;
  box-sizing: border-box;
  line-height: 1.6;
  transition: all 0.3s ease;
}

.textarea:focus {
  border-color: #667eea;
  background-color: #fafbff;
  box-shadow: 0 0 0 3rpx rgba(102, 126, 234, 0.1);
}

.textarea.error {
  border-color: #ff6b6b;
  background-color: #fffafa;
}

.char-count {
  text-align: right;
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #a0aec0;
  font-weight: 400;
}

.char-count.error {
  color: #ff6b6b;
}

.subject-display {
  width: 100%;
  padding: 28rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  font-size: 30rpx;
  color: #2d3748;
  background: linear-gradient(135deg, #f7fafc 0%, #edf2f7 100%);
  box-sizing: border-box;
  min-height: 92rpx;
  display: flex;
  align-items: center;
}

.subject-text {
  color: #667eea;
  font-weight: 600;
  letter-spacing: 0.5rpx;
}

.error-message {
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #ff6b6b;
  font-weight: 400;
}

.button-group {
  margin-top: 80rpx;
}

.submit-button {
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 20rpx;
  height: 96rpx;
  font-size: 34rpx;
  font-weight: 600;
  border: none;
  line-height: 96rpx;
  letter-spacing: 1rpx;
  box-shadow: 0 8rpx 32rpx rgba(118, 75, 162, 0.25);
  transition: all 0.3s ease;
}

.submit-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(118, 75, 162, 0.3);
}

.submit-button:disabled {
  background: #cbd5e0;
  color: #a0aec0;
  box-shadow: none;
  transform: none;
}

.submit-button.loading {
  opacity: 0.7;
}