.container {
  padding: 40rpx 16rpx;
  min-height: 100vh;
  background: #f7f8fa;
}

.form {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid #e2e8f0;
}

.form-group {
  margin-bottom: 48rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #1e293b;
  margin-bottom: 16rpx;
  font-weight: 600;
  letter-spacing: 0.5rpx;
}

.required {
  color: #ef4444;
  margin-left: 4rpx;
}

.textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  border: 1rpx solid #e2e8f0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #1e293b;
  background-color: #fff;
  box-sizing: border-box;
  line-height: 1.6;
  transition: all 0.2s ease;
}

.textarea:focus {
  border-color: #1890ff;
  background-color: #fafbff;
  box-shadow: 0 0 0 2rpx rgba(24, 144, 255, 0.1);
}

.textarea.error {
  border-color: #ef4444;
  background-color: #fef2f2;
}

.char-count {
  text-align: right;
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #94a3b8;
  font-weight: 400;
}

.char-count.error {
  color: #ef4444;
}

.subject-display {
  width: 100%;
  padding: 24rpx;
  border: 1rpx solid #e2e8f0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #1e293b;
  background: #f8fafc;
  box-sizing: border-box;
  min-height: 80rpx;
  display: flex;
  align-items: center;
}

.subject-text {
  color: #1890ff;
  font-weight: 600;
  letter-spacing: 0.5rpx;
}

.error-message {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #ef4444;
  font-weight: 400;
}

.button-group {
  margin-top: 60rpx;
}

.submit-button {
  width: 100%;
  background: #1890ff;
  color: white;
  border-radius: 16rpx;
  height: 88rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  line-height: 88rpx;
  letter-spacing: 0.5rpx;
  box-shadow: 0 2rpx 8rpx rgba(24, 144, 255, 0.2);
  transition: all 0.2s ease;
}

.submit-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 4rpx rgba(24, 144, 255, 0.3);
}

.submit-button:disabled {
  background: #cbd5e0;
  color: #94a3b8;
  box-shadow: none;
  transform: none;
}

.submit-button.loading {
  opacity: 0.7;
}