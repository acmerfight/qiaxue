.container {
  padding: 32rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.form {
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.form-group {
  margin-bottom: 40rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.required {
  color: #ff4757;
}

.textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  border: 2rpx solid #e1e8ed;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #fff;
  box-sizing: border-box;
}

.textarea:focus {
  border-color: #007aff;
}

.textarea.error {
  border-color: #ff4757;
}

.char-count {
  text-align: right;
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #8e8e93;
}

.char-count.error {
  color: #ff4757;
}

.picker-container {
  position: relative;
}

.picker {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #e1e8ed;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #fff;
  box-sizing: border-box;
  min-height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker:focus {
  border-color: #007aff;
}

.picker.error {
  border-color: #ff4757;
}

.picker-placeholder {
  color: #8e8e93;
}

.picker-arrow {
  color: #8e8e93;
  font-size: 24rpx;
}

.error-message {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #ff4757;
}

.button-group {
  margin-top: 64rpx;
}

.submit-button {
  width: 100%;
  background-color: #007aff;
  color: white;
  border-radius: 12rpx;
  height: 88rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  line-height: 88rpx;
}

.submit-button:disabled {
  background-color: #c7c7cc;
  color: #8e8e93;
}

.submit-button.loading {
  opacity: 0.6;
}