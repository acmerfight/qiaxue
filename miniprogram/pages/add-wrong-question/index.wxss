.container {
  padding: 40rpx 16rpx;
  min-height: 100vh;
  background: #f7f8fa;
}

/* 表单卡片 */
.form-card {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid #e2e8f0;
}

/* 表单项 */
.form-item {
  margin-bottom: 48rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

/* 表单标签 */
.form-label {
  font-size: 28rpx;
  color: #1e293b;
  font-weight: 600;
  letter-spacing: 0.5rpx;
  margin-bottom: 16rpx;
}

.required {
  color: #ef4444;
  margin-left: 4rpx;
}

/* 自定义文本域样式 */
.custom-textarea {
  width: 100% !important;
}

.custom-textarea .t-textarea__wrapper {
  background-color: #fff !important;
  border-radius: 12rpx !important;
  border: 1rpx solid #e2e8f0 !important;
  transition: all 0.2s ease !important;
}

.custom-textarea .t-textarea__wrapper:focus-within {
  border-color: #1890ff !important;
  background-color: #fafbff !important;
  box-shadow: 0 0 0 2rpx rgba(24, 144, 255, 0.1) !important;
}

.custom-textarea.error .t-textarea__wrapper {
  border-color: #ef4444 !important;
  background-color: #fef2f2 !important;
}

.custom-textarea .t-textarea__placeholder {
  color: #94a3b8 !important;
  font-size: 28rpx !important;
}

.custom-textarea .t-textarea__wrapper-inner {
  padding: 24rpx !important;
}

.custom-textarea textarea {
  font-size: 28rpx !important;
  line-height: 1.6 !important;
  color: #1e293b !important;
  min-height: 200rpx !important;
}

/* 字数统计 */
.custom-textarea .t-textarea__indicator {
  font-size: 24rpx !important;
  color: #94a3b8 !important;
  margin-top: 8rpx !important;
  padding-right: 4rpx !important;
}

.custom-textarea.error .t-textarea__indicator {
  color: #ef4444 !important;
}

/* 学科显示 */
.subject-display {
  padding: 24rpx;
  border: 1rpx solid #e2e8f0;
  border-radius: 12rpx;
  background: #f8fafc;
}

/* 错误消息 */
.error-message {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #ef4444;
  font-weight: 400;
}

/* 按钮组 */
.button-group {
  margin-top: 60rpx;
}

/* 提交按钮 */
.submit-button {
  height: 88rpx !important;
  font-size: 32rpx !important;
  font-weight: 600 !important;
  border-radius: 16rpx !important;
  letter-spacing: 0.5rpx !important;
  box-shadow: 0 2rpx 8rpx rgba(24, 144, 255, 0.2) !important;
}

/* 覆盖 TDesign 默认样式 */
.t-button--primary {
  background-color: #1890ff !important;
  border-color: #1890ff !important;
}

.t-button--primary:active {
  background-color: #096dd9 !important;
  border-color: #096dd9 !important;
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 4rpx rgba(24, 144, 255, 0.3) !important;
}

.t-button--disabled {
  background-color: #cbd5e0 !important;
  border-color: #cbd5e0 !important;
  color: #94a3b8 !important;
  box-shadow: none !important;
  transform: none !important;
}