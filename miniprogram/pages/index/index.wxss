/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 32rpx;
  border-radius: 50%;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
}

.usermotto {
  margin-top: 80rpx;
}

.avatar-wrapper {
  padding: 0;
  width: 80rpx !important;
  height: 80rpx !important;
  border-radius: 40rpx;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.avatar {
  display: block;
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 24rpx 32rpx;
  box-sizing: border-box;
  border-top: 1rpx solid rgba(255, 255, 255, 0.15);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.15);
  color: white;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  margin: 24rpx 0;
}

.nickname-label {
  width: 120rpx;
  font-weight: 500;
}

.nickname-input {
  flex: 1;
  color: white;
}

/* 应用标题样式 */
.app-header {
  text-align: center;
  padding: 120rpx 60rpx 100rpx;
}

.app-title {
  display: block;
  font-size: 72rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 24rpx;
  text-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  letter-spacing: 2rpx;
}

.app-subtitle {
  display: block;
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.85);
  font-weight: 400;
  letter-spacing: 1rpx;
}

/* 功能入口样式 */
.features {
  padding: 0 60rpx;
  margin-bottom: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.feature-button {
  width: 520rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
  color: white;
  border-radius: 24rpx;
  height: 96rpx;
  font-size: 34rpx;
  font-weight: 600;
  border: none;
  line-height: 96rpx;
  margin: 0 auto;
  box-shadow: 0 12rpx 48rpx rgba(238, 90, 36, 0.25);
  letter-spacing: 1rpx;
  transform: translateY(0);
  transition: all 0.3s ease;
}

.feature-button:active {
  transform: translateY(4rpx);
  box-shadow: 0 8rpx 24rpx rgba(238, 90, 36, 0.3);
}
