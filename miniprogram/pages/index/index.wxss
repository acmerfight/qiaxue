/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f7f8fa;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 40rpx;
  width: 100%;
}

.user-profile {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  margin: 0 0 16rpx 0;
}

.userinfo-nickname {
  font-size: 24rpx;
  color: #64748b;
  font-weight: 500;
}

.usermotto {
  margin-top: 60rpx;
  text-align: center;
}

.user-motto {
  font-size: 28rpx;
  color: #64748b;
  line-height: 1.6;
}

.avatar-wrapper {
  padding: 0;
  width: 80px !important;
  height: 80px !important;
  border-radius: 40px;
  margin: 0 0 16rpx 0;
  background: transparent;
  border: none;
}

.avatar-wrapper::after {
  display: none;
}

.avatar {
  display: block;
  width: 80px;
  height: 80px;
  border-radius: 40px;
}

.nickname-wrapper {
  width: 480rpx;
  margin: 16rpx 0;
}

.nickname-wrapper .t-input {
  background: #ffffff;
  border-radius: 12rpx;
  border: 1rpx solid #e2e8f0;
}

.nickname-wrapper .t-input__label {
  width: 80rpx;
  font-weight: 500;
  font-size: 28rpx;
}

.nickname-wrapper .t-input__wrap {
  font-size: 28rpx;
}

.version-tip {
  font-size: 24rpx;
  color: #94a3b8;
  margin-top: 16rpx;
}

/* 应用标题样式 */
.app-header {
  text-align: center;
  padding: 100rpx 40rpx 80rpx;
}

.app-title {
  display: block;
  font-size: 64rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 16rpx;
  letter-spacing: 2rpx;
}

.app-subtitle {
  display: block;
  font-size: 28rpx;
  color: #64748b;
  font-weight: 400;
  letter-spacing: 0.5rpx;
  margin-bottom: 0;
}

/* 功能入口样式 */
.features {
  padding: 0 40rpx;
  margin-bottom: 80rpx;
}

.feature-button {
  width: 100% !important;
  height: 120rpx !important;
  border-radius: 16rpx !important;
  background: #ffffff !important;
  border: 1rpx solid #e2e8f0 !important;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04) !important;
  transition: all 0.2s ease;
}

.feature-button::after {
  display: none;
}

.feature-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.08) !important;
  background: #f8fafc !important;
}

.button-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.button-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.button-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #334155;
  letter-spacing: 0.5rpx;
}

/* TDesign组件样式覆盖 */
.t-button--primary {
  background-color: #1890ff !important;
  border-color: #1890ff !important;
}

.t-button--primary:active {
  background-color: #096dd9 !important;
  border-color: #096dd9 !important;
}

.t-button--text-medium {
  font-size: 28rpx !important;
  font-weight: 500 !important;
}