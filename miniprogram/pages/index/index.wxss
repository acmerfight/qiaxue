/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f7f8fa;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 40rpx;
  width: 100%;
}

.user-profile {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  overflow: hidden;
  width: 80rpx;
  height: 80rpx;
  margin: 0 0 16rpx 0;
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.userinfo-nickname {
  font-size: 24rpx;
  color: #64748b;
  font-weight: 500;
}

.usermotto {
  margin-top: 60rpx;
  text-align: center;
}

.user-motto {
  font-size: 28rpx;
  color: #64748b;
  line-height: 1.6;
}

.avatar-wrapper {
  padding: 0;
  width: 80rpx !important;
  height: 80rpx !important;
  border-radius: 40rpx;
  margin: 0 0 16rpx 0;
  background: transparent;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.avatar {
  display: block;
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
}

.nickname-wrapper {
  display: flex;
  width: 480rpx;
  padding: 16rpx 24rpx;
  box-sizing: border-box;
  border: 1rpx solid #e2e8f0;
  color: #334155;
  background: #ffffff;
  border-radius: 12rpx;
  margin: 16rpx 0;
}

.nickname-label {
  width: 80rpx;
  font-weight: 500;
  font-size: 28rpx;
}

.nickname-input {
  flex: 1;
  color: #334155;
  font-size: 28rpx;
}

.login-button {
  background: #1890ff;
  color: white;
  border-radius: 12rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  margin-top: 16rpx;
}

.version-tip {
  font-size: 24rpx;
  color: #94a3b8;
  margin-top: 16rpx;
}

/* 应用标题样式 */
.app-header {
  text-align: center;
  padding: 100rpx 60rpx 80rpx;
}

.app-title {
  display: block;
  font-size: 64rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 16rpx;
  letter-spacing: 2rpx;
}

.app-subtitle {
  display: block;
  font-size: 28rpx;
  color: #64748b;
  font-weight: 400;
  letter-spacing: 0.5rpx;
  margin-bottom: 0;
}

/* 功能入口样式 */
.features {
  padding: 0 60rpx;
  margin-bottom: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.feature-button {
  width: 480rpx;
  background: #ffffff;
  color: #1e293b;
  border-radius: 16rpx;
  height: 120rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: 1rpx solid #e2e8f0;
  margin: 0 auto;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  letter-spacing: 0.5rpx;
  transform: translateY(0);
  transition: all 0.2s ease;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  line-height: 1;
  padding: 24rpx;
}

.feature-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.08);
  background: #f8fafc;
}

.button-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.button-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #334155;
}
