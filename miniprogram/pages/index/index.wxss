/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

/* 应用标题样式 */
.app-header {
  text-align: center;
  padding: 120rpx 60rpx 80rpx;
}

.app-title {
  display: block;
  font-size: 64rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.app-subtitle {
  display: block;
  font-size: 28rpx;
  color: #8e8e93;
}

/* 功能入口样式 */
.features {
  padding: 0 60rpx;
  margin-bottom: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.feature-button {
  width: 520rpx;
  background-color: #007aff;
  color: white;
  border-radius: 16rpx;
  height: 88rpx;
  font-size: 32rpx;
  border: none;
  line-height: 88rpx;
  margin: 0 auto;
}
