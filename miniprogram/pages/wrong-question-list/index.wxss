.container {
  min-height: 100vh;
  background: #f7f8fa;
}

/* 自定义加载样式 */
.custom-loading {
  padding: 180rpx 40rpx;
}

.loading-text {
  color: #64748b;
  font-size: 26rpx;
  margin-top: 16rpx;
}

/* 自定义空状态样式 */
.custom-empty {
  padding-top: 180rpx;
}

.empty-description {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 32rpx;
}

.empty-description text {
  font-size: 26rpx;
  color: #64748b;
  line-height: 1.8;
}

.empty-description text:first-child {
  font-size: 32rpx;
  color: #1e293b;
  font-weight: 600;
}

.empty-action {
  margin-top: 32rpx;
  display: flex;
  justify-content: center;
}

.add-first-button {
  width: 280rpx !important;
  height: 80rpx !important;
  font-size: 28rpx !important;
  border-radius: 16rpx !important;
  background-color: #1890ff !important;
  color: #ffffff !important;
}

/* 列表样式 */
.question-list {
  padding: 32rpx 16rpx 140rpx;
}

.question-cell {
  margin-bottom: 24rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.question-cell .t-cell {
  padding: 32rpx !important;
}

.question-cell .t-cell__title {
  flex: 1;
}

.question-cell .t-cell__description {
  margin-top: 16rpx !important;
}

.question-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.question-tags {
  display: flex;
  gap: 12rpx;
}

.question-time {
  font-size: 22rpx;
  color: #94a3b8;
  flex-shrink: 0;
  margin-left: 16rpx;
}

.question-content {
  font-size: 28rpx;
  color: #475569;
  line-height: 1.7;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  margin-top: 12rpx;
}

.view-detail {
  font-size: 24rpx;
  color: #1890ff;
  font-weight: 500;
  white-space: nowrap;
}

/* 覆盖 TDesign 默认样式 */
.t-cell-group--card {
  margin: 0 !important;
}

.t-cell--hover {
  background-color: #f8fafc !important;
}

.t-cell__right-icon {
  color: #cbd5e1 !important;
}

/* FAB 按钮自定义 */
.t-fab {
  box-shadow: 0 4rpx 16rpx rgba(24, 144, 255, 0.3) !important;
}