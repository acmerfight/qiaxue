.container {
  min-height: 100vh;
  background: #f7f8fa;
}

/* 空状态样式 */
.empty-state {
  padding: 180rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  color: #94a3b8;
  margin-bottom: 32rpx;
  opacity: 0.9;
}

.empty-title {
  font-size: 32rpx;
  color: #1e293b;
  margin-bottom: 16rpx;
  font-weight: 600;
}

.empty-description {
  font-size: 26rpx;
  color: #64748b;
  line-height: 1.8;
  margin-bottom: 60rpx;
  max-width: 400rpx;
  margin-left: auto;
  margin-right: auto;
}

.add-first-button {
  background: #1890ff;
  color: white;
  border-radius: 16rpx;
  padding: 0 48rpx;
  height: 80rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  line-height: 80rpx;
  box-shadow: 0 2rpx 8rpx rgba(24, 144, 255, 0.2);
  letter-spacing: 0.5rpx;
}

/* 列表样式 */
.question-list {
  padding: 32rpx 16rpx;
}

.question-item {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid #e2e8f0;
  transition: all 0.2s ease;
}

.question-item:active {
  transform: translateY(1rpx);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.08);
  background: #f8fafc;
}

.question-item:last-child {
  margin-bottom: 140rpx;
}

.question-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.question-tags {
  display: flex;
  gap: 12rpx;
}

.tag {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  color: white;
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

.tag.subject {
  background: #1890ff;
}

.tag.type {
  background: #52c41a;
}

.question-time {
  font-size: 22rpx;
  color: #94a3b8;
  flex-shrink: 0;
  margin-left: 16rpx;
  font-weight: 400;
}

.question-content {
  font-size: 28rpx;
  color: #1e293b;
  line-height: 1.7;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  font-weight: 400;
}

.question-footer {
  margin-top: 16rpx;
  display: flex;
  justify-content: flex-end;
}

.view-detail {
  font-size: 24rpx;
  color: #1890ff;
  font-weight: 500;
}

/* 悬浮添加按钮 */
.fab {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 112rpx;
  height: 112rpx;
  background: #1890ff;
  border-radius: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(24, 144, 255, 0.3);
  z-index: 1000;
  border: none;
  padding: 0;
  transition: all 0.2s ease;
}

.fab:active {
  transform: scale(0.95) translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(24, 144, 255, 0.4);
}

.fab-icon {
  font-size: 44rpx;
  color: white;
  font-weight: 300;
  line-height: 1;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 120rpx 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-icon {
  font-size: 48rpx;
  color: #94a3b8;
  margin-bottom: 24rpx;
  animation: spin 2s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: #64748b;
  font-size: 26rpx;
  font-weight: 400;
}