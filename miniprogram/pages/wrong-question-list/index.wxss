.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9fa 0%, #e9ecef 100%);
}

/* 空状态样式 */
.empty-state {
  padding: 160rpx 60rpx;
  text-align: center;
}

.empty-icon {
  font-size: 140rpx;
  color: #a0a6b0;
  margin-bottom: 40rpx;
  opacity: 0.8;
}

.empty-title {
  font-size: 36rpx;
  color: #2d3748;
  margin-bottom: 20rpx;
  font-weight: 600;
}

.empty-description {
  font-size: 28rpx;
  color: #718096;
  line-height: 1.8;
  margin-bottom: 80rpx;
  max-width: 400rpx;
  margin-left: auto;
  margin-right: auto;
}

.add-first-button {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 25rpx;
  padding: 0 48rpx;
  height: 84rpx;
  font-size: 30rpx;
  font-weight: 500;
  border: none;
  line-height: 84rpx;
  box-shadow: 0 8rpx 32rpx rgba(118, 75, 162, 0.25);
  letter-spacing: 1rpx;
}

/* 列表样式 */
.question-list {
  padding: 40rpx 32rpx;
}

.question-item {
  background: white;
  border-radius: 20rpx;
  padding: 36rpx;
  margin-bottom: 28rpx;
  position: relative;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(0, 0, 0, 0.02);
  transition: all 0.3s ease;
}

.question-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.question-item:last-child {
  margin-bottom: 120rpx;
}

.question-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.question-tags {
  display: flex;
  gap: 12rpx;
}

.tag {
  padding: 10rpx 18rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: white;
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

.tag.subject {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.tag.type {
  background: linear-gradient(135deg, #56ab2f 0%, #a8e6cf 100%);
}

.question-time {
  font-size: 24rpx;
  color: #a0aec0;
  flex-shrink: 0;
  margin-left: 16rpx;
  font-weight: 400;
}

.question-content {
  font-size: 30rpx;
  color: #2d3748;
  line-height: 1.7;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  font-weight: 400;
}

.question-footer {
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
}

.view-detail {
  font-size: 26rpx;
  color: #667eea;
  font-weight: 500;
}

/* 悬浮添加按钮 */
.fab {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 40rpx rgba(238, 90, 36, 0.3);
  z-index: 1000;
  border: none;
  padding: 0;
  transition: all 0.3s ease;
}

.fab:active {
  transform: scale(0.95) translateY(2rpx);
  box-shadow: 0 8rpx 24rpx rgba(238, 90, 36, 0.4);
}

.fab-icon {
  font-size: 50rpx;
  color: white;
  font-weight: 300;
  line-height: 1;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 80rpx;
  color: #a0aec0;
  font-size: 28rpx;
  font-weight: 400;
}